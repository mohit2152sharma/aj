{
  "name": "webrtc-client",
  "version": "1.0.0",
  "description": "Modern TypeScript WebRTC client for Kurento Media Server",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "npm run build && npm run serve",
    "serve": "http-server public -p 8080 -c-1",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "webrtc",
    "kurento",
    "typescript",
    "video",
    "streaming"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "http-server": "^14.1.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  }
}